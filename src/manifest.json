{
  "name": "GitHub Productivity",
  "version": "0.0.0",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "scripts": [
      "hot-reload.js",
      "background.js"
    ]
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://github.com/*",
        "https://gist.github.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}
