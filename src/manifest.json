{
  "name": "GitHub Productivity",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "scripts": [
      "hot-reload.js",
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://github.com/*",
        "https://gist.github.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}
